ALTER TABLE ALUMNOS ADD IMC NUMBER(4,2);
ALTER TABLE ALUMNOS ADD DIAS_EDAD NUMBER(8,2);
ALTER TABLE ALUMNOS ADD MESES_EDAD NUMBER(6,2);
ALTER TABLE ALUMNOS ADD ANIOS_EDAD NUMBER(2,2);

UPDATE ALUMNOS SET MESES_EDAD = ROUND(MONTHS_BETWEEN(SYSDATE,FECHA_NACIMIENTO),2) ;
UPDATE ALUMNOS SET DIAS_EDAD = ROUND((SYSDATE - FECHA_NACIMIENTO),2) ;
UPDATE ALUMNOS SET ANIOS_EDAD = ROUND((MONTHS_BETWEEN(SYSDATE, FECHA_NACIMIENTO) / 12),2)